@model List<EsinavUygulamasi.DAL.Models.Database.Topic>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Student/Views/Shared/_StudentLayout.cshtml";
}
<style>
    body a{
        color:black;
    }
    .gridHeader{
        text-align:center;
    }
</style>
<body>
    <div class= "container">
            <br/>
            
            <div>
                <div class="gridHeader p-4"><h3>Konu Listesi</h3></div>
                <table id="example" class="table table-hover table-bordered table-light table-striped " style="color:black" width="100%"  cellspacing="0">
                    <thead class="thead-dark ">
                        <tr>
                            <th> id </th>
                            <th> Name </th>                                                                                                       
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var topic in Model)
                        {
                            <tr>
                                <th> @topic.Id </th>
                                <td><a href="/Student/Question/Index/@topic.Id" data-id="@topic.Id">@topic.Name</a> </td>
                            </tr>
                        }
                    </tbody>

                </table>
              
            </div>
    </div>
</body>

