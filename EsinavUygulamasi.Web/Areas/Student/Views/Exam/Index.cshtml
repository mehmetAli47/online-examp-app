@model List<EsinavUygulamasi.Models.Response.ExamVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Student/Views/Shared/_StudentLayout.cshtml";
}

<<body>
    <sectin class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Sınavlar</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card">
                            <a href="/Student/Test/Index/@item.Id" data - id="@item.Id">
                                <img src="~/web/images/sınav.jpg" class="card-img-top img-fluid" alt="" >
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @(((DateTime)item.CreateTime).ToString("dd-MMM-yyyy"))
                                        </a>
                                    </li>
                                </ul>
                                <h5 class="card-title">
                                    <a href="/Student/Topic/Index/@item.Id" data - id="@item.Id">@item.Name</a>
                                </h5>
                            </div>
                        </div>
                        <br />
                        <br />

                    }
                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</sectin>
 </body>
