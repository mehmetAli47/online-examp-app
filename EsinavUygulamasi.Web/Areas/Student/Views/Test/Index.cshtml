@model List<EsinavUygulamasi.Models.Response.TestVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Student/Views/Shared/_StudentLayout.cshtml";
}

<body>
    <div class="container">
        <div>
            <div class="text-center"> <h1>Test Listesi</h1> </div>
            </div>
            <table id="example" class="table table-striped  table-hover" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th> Test Adı </th>

                        <th>Başlangıç zamanı </th>

                        <th>Soru sayısı </th>

                        <th> </th>
                        <th> </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td> @item.StartTime </td>
                            <td> @item.NumberOfQuestion </td>
                            <td><a href="/Student/Test/TestContent/@item.Id" data - id="@item.Id" style="color:black;" class="btn btn-outline-success">Teste Başla</a></td>
                        </tr>

                    }
                </tbody>

            </table>

        </div>
</body>

