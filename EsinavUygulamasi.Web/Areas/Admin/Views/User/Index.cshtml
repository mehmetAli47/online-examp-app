@model List<EsinavUygulamasi.DAL.Models.Database.User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayouth.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>


<body>
    <div class="container">

        <div>
            <div class="text-center"> <h1>Kullanıcı Listesi</h1>  </div>
            <table id="example" class="table table-striped  table-hover" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th> id </th>

                        <th> Name </th>

                        <th>Surname </th>

                        <th>UserName </th>

                        <th> Email </th>

                        <th> CreatTime </th>
                        <th> </th>
                        <th> </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td> @user.Id </td>
                            <td> @user.Name</td>
                            <td> @user.Surname </td>
                            <td> @user.Username </td>
                            <td> @user.Email </td>
                            <td> @user.CreateTime </td>
                            <td><a class="btn btn-success btnUpdate" href="/Admin/User/UserUpdate/@user.Id" data - id="@user.Id">Güncelle </a></td>
                            <td><a class="btn btn-danger btnDlete" href="/Admin/User/UserDelete/@user.Id" data - id="@user.Id"> Sil </a></td>
                        </tr>

                    }
                </tbody>

            </table>

        </div>
    </div>
</body>
</html>