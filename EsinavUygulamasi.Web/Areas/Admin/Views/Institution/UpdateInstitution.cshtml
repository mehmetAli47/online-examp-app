@model EsinavUygulamasi.Models.Response.InstitutionVM

@{
    ViewData["Title"] = "UpdateInstitution";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayouth.cshtml";
}
<div class="container ">
    <div class="">
        <form asp-action="UpdateInstitution" method="post">
             <div class="form-group">
                    <label asp-for="Name" class="control-label">Adı</label>
                    <input id="Name" name="Name" class="form-control" value="@Model.Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="InstitutionInformation" class="control-label">Açıklama</label>
                    <input id="InstitutionInformation" name="InstitutionInformation" class="form-control" value="@Model.InstitutionInformation" />
                    <span asp-validation-for="InstitutionInformation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label">Kurum Adresi</label>
                    <input id="Address" name="Address" class="form-control" value="@Model.Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label">Kurum Telefonu</label>
                    <input id="Phone" name="Phone" class="form-control" value="@Model.Phone" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreateTime" class="control-label">Kayıt Tarihi</label>
                    <input id="createtime" name="createtime" type="datetime-local" class="form-control" value='@Model.CreateTime.ToString("yyyy-MM-dd HH:mm:ss")?.Replace(' ','T')' />
                    <span asp-validation-for="CreateTime" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Güncelle" class="btn btn-primary" />
                </div>
                <div class="text-center">
                    <a href="/Admin/Institution/Index">Back to List</a>
                </div>
        </form>
    </div>
</div>



