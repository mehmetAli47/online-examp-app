@model EsinavUygulamasi.Models.Response.InstitutionVM

@{
    ViewData["Title"] = "InstitutionAdd";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayouth.cshtml";
}

<div class="container ">
    <div class="text-center m-3" style="background-color:aliceblue">
        <h2>Yeni Kurum Ekleme</h2>
    </div>
    <div class="row m-3">
        <div class="col ">
            <form asp-action="InstitutionAdd" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Kurum ismi</label>
                    <input name="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InstitutionInformation" class="control-label">Kurum Açıklaması</label>
                    <input name="InstitutionInformation" class="form-control" />
                    <span asp-validation-for="InstitutionInformation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label">Kurum Adresi</label>
                    <input name="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label">Kurum Telefonu</label>
                    <input name="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Kurum Ekle" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="col">
        <a href="/Admin/Institution/Index" class="btn btn-group-sm">Back to List</a>
    </div>

</div>