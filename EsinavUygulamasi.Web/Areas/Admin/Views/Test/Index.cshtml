@model List<EsinavUygulamasi.Models.Response.TestVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayouth.cshtml";
}

<body>
    <div class="container">
        <div>
            <div class="text-center"> <h1>@ViewBag.ExamName Kategorisindeki Test Listesi</h1> </div>
            <div class="row p-2" style="text-align:end">
                <div class="col"></div>
                <div class="col">
                    <a href="/Admin/Test/SaveTest/@ViewBag.ExamId" class="btn btn-primary">Yeni Test Ekle </a>
                     
                </div>
            </div>
            <table id="example" class="table table-striped  table-hover" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th> id </th>

                        <th> Test Adı </th>

                        <th>Başlangıç zamanı </th>

                        <th>Soru sayısı </th>

                        <th> Kayıt Oluşturma Zamanı </th>

                        <th> kayıt Güncelleme Zamanı </th>

                        <th> </th>
                        <th> </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.Id </td>
                            <td><a class="btn btn-group" href="/Admin/Test/UserTestInformation/@item.Id" data - id="@item.Id">@item.Name</a></td>
                            <td> @item.StartTime </td>
                            <td> @item.NumberOfQuestion </td>
                            <td> @item.CreateTime </td>
                            <td> @item.LastUpdateTime </td>
                            <td><a class="btn btn-success btnUpdate" href="/Admin/Test/UpdateTest/@item.Id" data - id="@item.Id">Güncelle </a></td>
                            <td><a class="btn btn-danger btnDlete" href="/Admin/Test/DeleteTest/@item.Id" data - id="@item.Id"> Sil </a></td>
                        </tr>

                    }
                </tbody>

            </table>

        </div>
    </div>
</body>

