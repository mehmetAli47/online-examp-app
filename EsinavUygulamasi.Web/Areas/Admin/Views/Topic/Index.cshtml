@model IEnumerable<EsinavUygulamasi.DAL.Models.Database.Topic>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayouth.cshtml";
}
<body>
    <div class="container p-4">

        <div>
            <div class="text-center m-2"> <h1>Konu Başlıkları</h1>  </div>
            <div class="row p-3" style="text-align:end">
                <div class="col"></div>
                <div class="col">
                    <a href="/Admin/Topic/AddTopic" class="btn btn-primary">Yeni Konu Ekle</a>
                </div>
            </div>
            <table id="example" class="table table-striped  table-hover" style="max-width:none">
                <thead class="thead-dark">
                    <tr>
                        <th> id </th>

                        <th> Konu başlığı </th>

                        <th> Kayıt oluşturma zamanı </th>

                        <th>Son güncelleme zamanı</th>
                        <th> </th>
                        <th> </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.Id </td>
                            <td><a href="/Admin/Question/Index/@item.Id" data - id="@item.Id" style="color:black">@item.Name</a></td>
                            <td> @item.CreateTime </td>
                            <td> @item.LastUpdateTime </td>
                            <td><a class="btn btn-success btnUpdate" href="/Admin/Topic/UpdateTopic/@item.Id" data - id="@item.Id">Güncelle </a></td>
                            <td><a class="btn btn-danger btnDlete" href="/Admin/Topic/DeleteTopic/@item.Id" data - id="@item.Id"> Sil </a></td>
                        </tr>

                    }
                </tbody>

            </table>

        </div>
    </div>
</body>