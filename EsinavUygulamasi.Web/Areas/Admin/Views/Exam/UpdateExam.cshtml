@model EsinavUygulamasi.Models.Response.ExamVM

@{
    ViewData["Title"] = "UpdateExam";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayouth.cshtml";
}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="UpdateExam" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Sınav Adı</label>
                    <input id="Name" name="Name" class="form-control" value="@Model.Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreateTime" class="control-label">kayıt Oluşturma zamanı</label>
                    <input id="createtime" name="createtime" class="form-control" type="datetime-local" value='@Model.CreateTime.ToString("yyyy-MM-dd HH:mm:ss")?.Replace(' ','T')' />
                    <span asp-validation-for="CreateTime" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <select name="InstitutionId" id="InstitutionId" style="border-radius:5px;padding:2px;">
                        <option>Kurum Seçin</option>
                        @foreach (SelectListItem item in ViewBag.InsList)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }

                    </select>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Güncelle" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>