@model List<EsinavUygulamasi.DAL.Models.Database.Exam>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayouth.cshtml";
}
<body>
    <div class="container">

        <div>
            <div class="text-center"> <h1>Sınav Listesi</h1>  </div>
            <div class="row p-2" style="text-align:end">
                <div class="col"></div>
                <div class="col">
                    <a href="/Admin/Exam/AddExam" class="btn btn-primary">Yeni Sınav Ekle</a>
                </div>
            </div>
            <table id="example" class="table table-striped  table-hover" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th> id </th>

                        <th> Sınav Adı </th>

                        <th> Kayıt Oluşturma Zamanı </th>

                        <th> kayıt Güncelleme Zamanı </th>

                        <th> </th>
                        <th> </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.Id </td>
                            <td><a href="/Admin/Test/Index/@item.Id" data - id="@item.Id" style="color:black">@item.Name</a> </td>
                            <td> @item.CreateTime </td>
                            <td> @item.LastUpdateTime </td>
                            <td><a class="btn btn-success btnUpdate" href="/Admin/Exam/UpdateExam/@item.Id" data - id="@item.Id">Güncelle </a></td>
                            <td><a class="btn btn-danger btnDlete" href="/Admin/Exam/DeleteExam/@item.Id" data - id="@item.Id"> Sil </a></td>
                        </tr>

                    }
                </tbody>

            </table>

        </div>
    </div>
</body>

