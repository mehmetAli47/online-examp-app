@model EsinavUygulamasi.Models.UserVM

@{
    ViewData["Title"] = "UserAdd";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<section class="main-content-w3layouts-agileits">
		<div class="container">
			<h3 class="tittle">
                Kullanıcı Kayıt sayfası
			</h3>
				<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				<form asp-action="UserAdd">
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label for="validationCustom01">Adınız</label>
                    <input type="text" class="form-control" id="validationDefault01" name="Name" placeholder="" required="">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="validationCustom01">Soyadınız</label>
                    <input type="text" class="form-control" id="validationDefault01" name="SurName" placeholder="" required="">
                </div>
            </div>
            
            <div class="form-row">
                <div class="col-md-6 ">
                    <label for="validationCustom02">Kullanıcı Adınız</label>
                    <input type="text" class="form-control" id="validationDefault02" name="UserName" placeholder="" required="">
                </div>
                <div class="col-md-6">
                    <label for="exampleInputPassword1 mb-2">Şifre</label>
                    <input type="password" class="form-control" id="password1" name="Password" placeholder="" required="">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="exampleInputPassword2 mb-2">Mail Adresiniz</label>
                    <input type="email" class="form-control" id="password2" name="Email" placeholder="" required="">
                </div>
            </div>
            <button type="submit" class="btn btn-primary submit mb-4">kayıt ol</button>
            <p>
                <a href="#" id="btn1">Tüm Şartları Okudum ve Kabul Edıyorum</a>
            </p>
        </form>
		
					</div>
			</div>
		</div>
	<script>
